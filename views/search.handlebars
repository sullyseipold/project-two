<div id="home">
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">

                <h1 class="naybo">Rent an Item</h1>
                <form class="clearfix mb-4" action="POST">
                    <div class="form-group">
                        <label class="coolFont2" for="example-text">Search</label>
                        <input type="text" id="search-text" class="form-control" aria-describedby="search-text"
                            placeholder="What are you looking for?">

                        <br>
                        <button id="submit" class="btn btn-dark float-center coolFont2">Submit</button>
                        {{!-- <button id="allItems" class="btn btn-primary float-left">Show All</button> --}}
                </form>
                <br>
                <br>
                <h1>Available Items:</h1>
                <ul id="search-list" class="list-group coolFont2">
                    {{#each items}}
                    <form action="/item/{{this.id}}" method="GET">

                        <li> <button type="submit">{{this.name}} </button>
                        </li>

                    </form>


                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://2cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>